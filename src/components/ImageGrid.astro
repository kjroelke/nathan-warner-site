---
import { Image } from 'astro:assets';
import image1 from '../assets/images/gallery-images/gallery-1.webp';
import image2 from '../assets/images/gallery-images/gallery-2.webp';
import image3 from '../assets/images/gallery-images/gallery-3.webp';
import image4 from '../assets/images/gallery-images/gallery-4.webp';
---

<div class='d-grid overflow-hidden gap-1 rounded-2'>
    <div class='cell'>
        <Image
            src={image1}
            alt=''
            class:list={'w-100 h-100 object-fit-cover'}
            aria-hidden='true'
        />
    </div>
    <div class='cell'>
        <Image
            src={image2}
            alt=''
            class:list={'w-100 h-100 object-fit-cover'}
            aria-hidden='true'
        />
    </div>
    <div class='cell'>
        <Image
            src={image3}
            alt=''
            class:list={'w-100 h-100 object-fit-cover'}
            aria-hidden='true'
        />
    </div>
    <div class='cell'>
        <Image
            src={image4}
            alt=''
            class:list={'w-100 h-100 object-fit-cover'}
            aria-hidden='true'
        />
    </div>
</div>

<style>
    .d-grid {
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(3, clamp(150px, 27vmin, 200px));
        place-content: stretch;
        place-items: stretch;
    }
    .cell {
        display: block;
        overflow: hidden;
    }
    .cell:nth-child(1) {
        grid-column-start: 1;
        grid-row: 1 / 3;
    }
    .cell:nth-child(2) {
        grid-column-start: 2;
        grid-row: 1 / 2;
    }
    .cell:nth-child(3) {
        grid-column-start: 2;
        grid-row: 2 / 4;
    }
    .cell:nth-child(4) {
        grid-column-start: 1;
        grid-row: 3 / 4;
    }
</style>
